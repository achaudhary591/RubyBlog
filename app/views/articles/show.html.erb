<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>
<div style="display:flex">
  <%= button_to 'Edit', edit_article_path(@article), method: :get %> &nbsp;
  <%= button_to 'Destroy', @article, method: :delete, data: { confirm: "Are you sure?" } %> &nbsp;
  <%= button_to 'Back', articles_path, method: :get %>
</div>

